<Page
    x:Class="ManagerApp.Pages.Statistics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ManagerApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Charts" 
    Background="#34495e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        
        <!--Back button-->
        <Button
            x:Name="uxBackButton"
            Style="{StaticResource NavigationBackButtonNormalStyle}"
            Grid.Row="0"
            Grid.Column="0" />

        <!-- Main stastistics view on right side-->
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="70,0,70,0"
            Background="#ecf0f1">

            <!--Title-->
            <StackPanel>
                <ComboBox 
                    x:Name="KPIComboBox" 
                    PlaceholderText="Select view"
                    Foreground="Black"
                    FontStretch="ExtraExpanded"
                    FontSize="40"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" 
                    SelectionChanged="KPIComboBox_SelectionChanged"
                    Background="Khaki">
                        <x:String>Current Weekly View</x:String>
                        <x:String>Current Monthly View</x:String>
                        <x:String>Current Yearly View</x:String>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!--Weekly view-->
        <Grid
            Margin="90,70,90,20"
            x:Name="uxWeeklyViewGrid"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Background="#ecf0f1"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.03*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Top left-->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Background="Gray"
                Opacity="5">
                <StackPanel
                    Background="Khaki">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        FontSize="30"
                        Text="--Top Performing Menu Item--"/>
                </StackPanel>
                <StackPanel
                    Background="Khaki">
                    <TextBlock 
                         x:Name="WeeklyTopItem"
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        FontSize="30"  
                        />

                </StackPanel>
                <Image
                    x:Name="WeeklyPicture"
                    Height ="350" 
                    Width="500"
                    />
            </StackPanel>

            <!--Top Right-->
            <Grid    
                Grid.Row="1"
                Grid.Column="2"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.27*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.08*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--Title-->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="Khaki">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        FontSize="30"
                        Text="Menu Items' Performance"/>
                </StackPanel>
                <!--List-->
                <ListView 
                    x:Name="WeeklyMenuItemPerformance"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Foreground="Black">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock FontSize="16" Text="{Binding Name}" Foreground="Black"/>
                                <TextBlock FontSize="10" Text="{Binding Count}" Foreground="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--Bottom Left-->
            <Grid    
                Grid.Row="3"
                Grid.Column="0"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.27*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.08*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--Title-->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="Khaki">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        FontSize="30"
                        Text="Weekly Order Count"/>
                </StackPanel>
                <!--Chart-->
                <syncfusion:SfChart
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="0,5,0,0"
                    x:Name="UxWeeklyOrderChart"
                    Foreground="Black"
                    Palette="GreenChrome" 
                    >

                    <syncfusion:SfChart.PrimaryAxis >
                        <syncfusion:CategoryAxis LabelPlacement="BetweenTicks" Header="Days of the Week" Foreground="Black"/>
                    </syncfusion:SfChart.PrimaryAxis>
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis Header="Order Count" Foreground="Black"/>
                    </syncfusion:SfChart.SecondaryAxis>
                    <syncfusion:ColumnSeries  ItemsSource="{Binding UxWeeklyOrderData}" XBindingPath="WeekDay" YBindingPath="Count" Foreground="Black" >
                    </syncfusion:ColumnSeries>
                </syncfusion:SfChart>
            </Grid>

            <!--Bottom Right-->
            <Grid    
                Grid.Row="3"
                Grid.Column="2"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.27*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.08*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--Title-->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="Khaki">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        Foreground="Black"
                        FontSize="30"
                        Text="Weekly Revenue"/>
                </StackPanel>
                <!--Chart-->
                <syncfusion:SfChart
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="0,5,0,0"
                    x:Name="UxWeeklyRevenueChart"
                    Foreground="Black"
                    Palette="GreenChrome">

                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis LabelPlacement="BetweenTicks" Header="Days of the Week" Foreground="Black"/>
                    </syncfusion:SfChart.PrimaryAxis>
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis Header="USD ($)" Foreground="Black"/>
                    </syncfusion:SfChart.SecondaryAxis>
                    <syncfusion:ColumnSeries  ItemsSource="{Binding UxWeeklyRevenueData}" XBindingPath="WeekDay" YBindingPath="Count" Foreground="Black">
                    </syncfusion:ColumnSeries>
                </syncfusion:SfChart>
            </Grid>
        </Grid>

