                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="Khaki">
                    <TextBlock 
                    HorizontalAlignment="Center"
                        Foreground="Black"
                        FontSize="30"
                        Text="Weekly Revenue"/>
                </StackPanel>
                <!--Chart-->
                <syncfusion:SfChart
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="0,5,0,0">

                    <syncfusion:SfChart.PrimaryAxis>
