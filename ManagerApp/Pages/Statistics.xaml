                    <syncfusion:ColumnSeries  ItemsSource="{Binding Data}" XBindingPath="Name" YBindingPath="Height" >
                    </syncfusion:ColumnSeries>
                </syncfusion:SfChart>
            </Grid>
        </Grid>

        <!--Year view-->
        <Grid
            Margin="90,70,90,20"
            x:Name="uxYearlyViewGrid"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
