<Page
    x:Class="ManagerApp.Pages.HomeScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ManagerApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="DarkGray">
    <StackPanel
        x:Name="uxBaseStack"
        Background="DarkGray">
        <StackPanel
            x:Name="uxTabStack"
            Background="#7ED956"
            Orientation="Horizontal"
            Height="50">
            <Button
                x:Name="uxLogoutButton"
                Height="40"
                Width="40"
                Margin="5,5,50,5"
                HorizontalAlignment="Left"
                Foreground="Transparent">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/logout.png"/>
                </Button.Background>
            </Button>
            <Button
                x:Name="uxInventoryButton"
                Height="40"
                Margin="95,5,95,5"
                Background="White"
                Foreground="Black"
                HorizontalAlignment="Center"
                Content="Inventory"/>
            <Button
                x:Name="uxCouponButton"
                Height="40"
                Margin="95,5,95,5"
                Background="White"
                Foreground="Black"
                HorizontalAlignment="Center"
                Content="Coupon"/>
            <Button
                x:Name="uxEmployeeButton"
                Margin="95,5,95,5"
                Background="White"
                Foreground="Black"
                HorizontalAlignment="Center"
                Content="Employee"/>
            <Button
                x:Name="uxPromosButton"
                Height="40"
                Background="White"
                Foreground="Black"
                Margin="95,5,95,5"
                HorizontalAlignment="Center"
                Content="Promos"/>
            <Button
                x:Name="uxStatisticsButton"
                Height="40"
                Background="White"
                Foreground="Black"
                Margin="95,5,95,5"
                HorizontalAlignment="Center"
                Content="Statistics"/>
            <Button
                x:Name="uxMenuEditButton"
                Height="40"
                Background="White"
                Foreground="Black"
                Margin="95,5,95,5"
                HorizontalAlignment="Center"
                Content="Menu Management"/>
        </StackPanel>
    </StackPanel>
</Page>
